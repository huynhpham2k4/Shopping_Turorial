@model IEnumerable<ProductModel>
@{
	ViewData["title"] = "Product Listed";
}
<!DOCTYPE html>
<html>
<head>
	<meta name="index" content="width=device-width" />
	<title> list product</title>
</head>
<body>

	<h3>List Product</h3>

	<a class="btn btn-primary" asp-action="Create" asp-controller="Product"> Add Product </a>
	<table class="table" id="myTable">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Product Name</th>
				<th scope="col">Quantity Product</th>
				<th scope="col">Quantity Sold</th>
				<th scope="col">Product Description</th>
				<th scope="col">Product Price</th>
				<th scope="col">Product Image</th>
				<th scope="col">Product Slug</th>
				<th scope="col">Product Category </th>
				<th scope="col">Product Brand </th>
				<th scope="col">Action </th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th scope="row">@item.Id</th>
					<td>@item.Name</td>
					<td>
						<p>@item.Quantity</p>
						<a asp-controller="Product" asp-action="AddQuantity" asp-route-id="@item.Id"> Add quatity</a>
					</td>
					<td>@item.Sold</td>
					<td>@item.Description</td>
					<th>@item.Price.ToString("#,##0 VND")</th>
					<td> <img src="~/media/products/@item.Image" width="120"></td>
					<td>@item.Slug</td>
					<td>@item.Category.Name</td>
					<td>@item.Brand.Name</td>
					<td>
						<a asp-action="Edit" class="btn btn-warning btn-sm " asp-controller="Product" asp-route-id="@item.Id">Edit</a>
						<a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</body>
@section scripts {
	<script>
		let table = new DataTable('#myTable');
	</script>
}
</html>

