@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
	ViewData["title"] = "List Roles";
}
<h3>List Role</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Role"> Add Role </a>
<table class="table" id="myTable">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Role Name</th>
			<th scope="col">Role</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.Name</td>
				<td>@Html.Raw(item.NormalizedName)</td>
				<td>
					<a asp-action="Edit" class="btn btn-warning btn-sm " asp-controller="Role" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Role" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>