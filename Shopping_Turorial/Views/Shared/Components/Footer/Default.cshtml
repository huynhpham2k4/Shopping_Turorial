@model ContactModel
<div class="row">
	<div class="col-sm-2">
		<div class="companyinfo">
			<img src="~/media/logo/@Model.LogoImg" width=" 150" height="100" />
			<h3>@Model.Name</h3>
		</div>
	</div>
	<div class="col-sm-10 d-flex align-items-center">
		<div class="col-sm-3">
			@Html.Raw(Model.Description)
		</div>

		<div class="col-sm-5">
			@Html.Raw(Model.Map)
		</div>

		<div class="col-sm-4">
			<h5>@Model.Name</h5>
			<h5>@Model.Email</h5>
			<h5>@Model.Phone</h5>
		</div>

	</div>
</div>
</div>