@{
	ViewData["title"] = "List Compare";
	var key = 0;
}
<!DOCTYPE html>
<html>
<head>
	<meta name="index" content="width=device-width" />
	<title> list Compare</title>
</head>
<body>

	<h3>List Compare</h3>
	<table class="table" id="myTable">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Product Name</th>
				<th scope="col">Product Description</th>
				<th scope="col">Product Price</th>
				<th scope="col">Product Image</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var compare_product in Model)
			{
				key++;
				<tr>
					<td>@key</td>
					<td>@compare_product.Product.Name</td>
					<td>@compare_product.Product.Description</td>
					<td>@compare_product.Product.Price.ToString("#,##0 VND")</td>
					<td><img src="~/media/products/@compare_product.Product.Image" width="120px" height="150px" /></td>
					<td><a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-Id="@compare_product.Compare.Id">Delete</a></td>

				</tr>
			}
		</tbody>
	</table>
</body>
@section scripts {
	<script>
		let table = new DataTable('#myTable');
	</script>
}
</html>

