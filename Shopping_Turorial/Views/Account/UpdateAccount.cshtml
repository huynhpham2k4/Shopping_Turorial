@model AppUserModel
@{
	ViewData["Title"] = "Update Account Information";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Update Account Information!</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="UpdateInfoAccount" asp-controller="Account" method="Post">
						<div class="form-group">
							<label>Username</label>
							<input asp-for="UserName" readonly class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Phone Number</label>
							<input asp-for="PhoneNumber" required class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Old Password</label>
							<input type="text" value="@Model.PasswordHash" readonly class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>

						<div class="form-group">
							<label>New Password</label>
							<input type="text" required name="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>

						<button class="btn btn-default">Update</button>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts
{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}